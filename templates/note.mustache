{{!
    @template assignsubmission_notes/note

    Assign submission notes note.

    Context variables required for this template:
    * indicatenonote - Indicate that there is no note.
    * note - Note click text.
    * notedetails - The note.
    * notedetailssummary - The summary of the note.

    Example context (json):
    {
        "indicatenonote": true,
        "note": "SpLD",
        "notedetails": "Note details",
        "notedetailssummary": "Note details summary"
    }
}}
<div class="assignsubmissionnote">
    {{^note}}
        {{#indicatenonote}}<span class="assignsubmission_nonote">{{#str}} nonote, assignsubmission_notes {{/str}}</span>{{/indicatenonote}}
    {{/note}}
    {{#note}}
        <span id="note-modal-{{uniqid}}" class="assignsubmission_hasnote" role="button" title="{{notedetailssummary}}">
            {{note}}
        </span>
    {{/note}}
</div>
{{#js}}
    require(['jquery', 'core/modal_factory'], function($, ModalFactory) {
        var trigger = $('#note-modal-{{uniqid}}');
        ModalFactory.create({
            type: ModalFactory.types.ALERT,
            title: '{{#str}} notes, assignsubmission_notes {{/str}} {{note}}',
            body: '{{{notedetails}}}',
            templateContext: {classes: 'submission-note-modal modal-xl'}
        }, trigger);
    });
{{/js}}