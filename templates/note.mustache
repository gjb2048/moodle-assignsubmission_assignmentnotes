{{!
    @template assignsubmission_notes/note

    Assign submission notes note.

    Example context (json):
    {
        "note": "SpLD",
        "notedetails": "Note details",
        "notedetailssummary": "Note details summary"
    }
}}
<div class="assignsubmissionnote">
    {{^note}}
        {{#str}} nonote, assignsubmission_notes {{/str}}
    {{/note}}
    {{#note}}
        <span id="note-modal-{{uniqid}}" type="button" title="{{notedetailssummary}}">
            {{note}}
        </span>
        {{#js}}
        require(['jquery', 'core/modal_factory'],
            function($, ModalFactory) {
  
            var trigger = $('#note-modal-{{uniqid}}');
            ModalFactory.create({
                type: ModalFactory.types.ALERT,
                title: '{{note}}',
                body: '{{{notedetails}}}',
            }, trigger);
        });
        {{/js}}
    {{/note}}
</div>
